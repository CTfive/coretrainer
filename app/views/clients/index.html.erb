<div class="booyah-box col-10 offset-1 text-center">
  <h1>Client Dashboard</h1>
  <h3> views/clients/index.html.erb </h3>
</div>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= link_to 'Show', clients_path %></td>
        <td><%= link_to 'Edit', edit_client_path(@clients) %></td>
      </tr>
  </tbody>
</table>

<br>
<%= link_to 'New Client', new_client_path %>
<br>


<h3 style="text-align:center; color:purple;">Implement your client dashboard ideas below this line by working in the views/clients/index.html.erb file and found at http://localhost:3030/clients</h3>
<br>

<%# Client information form %>
<div class="booyah-box text-center col-10 offset-1">
  <%= simple_form_for clients_path(@client) do |f| %> 
    <%= f.error_notification %>
    <%= f.input :birthday %>
    <%= f.input :injuries %>
    <%= f.input :athletic_background %>
    <%= f.input :goals %>
    <%= f.input :workout_history %>
    <%= f.button :submit, 'Submit your info', class: "btn-primary" %>
    <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
  <% end %>
</div>
<br><br>

<%# Checkin form %>
<div class="booyah-box text-center col-10 offset-1">
  <%= simple_form_for '#' do |f| %> 
    <%= f.input :weight %>
    <%= f.input :mood %>
    <%= f.input :notes %>
    <%= f.button :submit, 'Add Checkin', class: "btn-primary" %>
    <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %></i>
  <% end %> 
</div>
<br><br>

<%# Workout form %>
<div class="booyah-box text-center col-10 offset-1">
    <%= simple_form_for '#' do |f| %>
    <%= f.input :exersize %>
    <%= f.input :sets %>
    <%= f.input :reps %>
    <%= f.input :weight %>
    <%= f.input :date_time %>
    <%= f.input :notes %>
    <%= f.input :workout_intensity, as: :range %>
    <%= f.button :submit,'Add workout', class: "btn-primary" %>
    <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %></i>
  <% end %>  
</div>
<br>
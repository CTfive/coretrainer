<p id="notice"><%= notice %></p>

<h4>Core Trainers</h4>

<table class="table table-hover table-dark">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Location</th>
      <th scope="col">Specialties</th>
      <th scope="col">Training Since</th>
      <th scope="col">Availability</th> 
    </tr>
  </thead>
    <tbody>
    <% @trainers.each do |trainer| %>
      <tr>
        <td><%= link_to trainer.user.name, trainer_path(trainer) %></td>
        <td><%=raw trainer.location || "&nbsp;" %></td>
        <td><%= raw trainer.specialties || "&nbsp;" %></td>
        <td><%=raw trainer.started_training || "&nbsp;" %></td>
        <td><%=raw trainer.availability || "&nbsp;" %></td>
        <% if current_user.trainer? %>
          <td><%= link_to 'Edit', edit_trainer_path(trainer) %></td>
          <td><%= link_to 'Destroy', '#', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

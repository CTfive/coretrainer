<p id="notice"><%= notice %></p>

<div class="booyah-box col-10 offset-1 text-center">
  <h1>Trainers Dashboard</h1>
</div>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trainers.each do |trainer| %>
      <tr>
        <td><%= link_to 'Show', trainer %></td>
        <td><%= link_to 'Edit', edit_trainer_path(trainer) %></td>
        <td><%= link_to 'Destroy', trainer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Trainer', new_trainer_path %>
<br>

<!-- Trainer information form -->
<div class="booyah-box col-10 offset-1 text-center">
  <%= simple_form_for trainers_path(@trainer) do |f| %>
    <%= f.error_notification %>
    <%= f.input :bio %>
    <%= f.input :location %>
    <%= f.input :specialties %>
    <%= f.input :started_training %>
    <%= f.input :athletic_background %>
    <%= f.input :certificate_id %>
    <%= f.input :other_credentials %>
    <%= f.button :submit, 'Add Trainer Info', class: "btn-primary" %>
    <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
  <% end %>
</div>
<br>
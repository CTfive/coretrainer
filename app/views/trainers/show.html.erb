<p id="notice"><%= notice %></p>

<div class="booyah-box">  
  <strong>Name</strong> <br>
  <%= @trainer.user.name %> <br>
  <strong>Location</strong> <br>
  <%= @trainer.location %> <br>
  <strong>Bio</strong> <br>
  <%=raw @trainer.bio || "&nbsp;" %>
  <br>
  <% if current_user.trainer?%>
    <%= link_to 'Edit', edit_trainer_path(@trainer) %>
    <%= link_to 'Destroy', '#', method: :delete, data: { confirm: 'Are you sure?' } %>
    <%= link_to 'Create Workout', new_trainer_workout_path(@trainer) %>
  <% elsif current_user.client? %>
    <%= link_to 'Trainer Workouts', trainer_workout_path(@trainer) %>
  <% end %>
</div>
